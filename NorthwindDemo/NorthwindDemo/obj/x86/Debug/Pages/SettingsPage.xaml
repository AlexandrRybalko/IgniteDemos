<Page
    x:Class="NorthwindDemo.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NorthwindDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Name="MainGrid" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid x:ConnectionId='2' x:Name="HiddenContainer"
                  Grid.RowSpan="2"
                  Opacity="0" >
            <Grid x:ConnectionId='7' x:Name="DirectPrintContainer">
                <StackPanel x:ConnectionId='8' Name="PrintableContent"
                            Margin="20"
                            Orientation="Vertical">
                    <Image Width="200" Stretch="Fill" HorizontalAlignment="Left" Margin="16"
                           Source="/Assets/Dog.jpg"/>
                    <TextBlock x:ConnectionId='9' FontSize="20" Margin="16"
                               Name="PrinterText"
                               Text="This is the text that will be sent to the printer."
                               TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>

        <StackPanel Orientation="Vertical" Margin="16" Grid.Row="1">
            <TextBox x:ConnectionId='3' Name="SqlTextbox" Margin="16"
                     Header="Connection string to SQL Server"
                     PlaceholderText="Connection string" PlaceholderForeground="CornflowerBlue"
                     />
            <CheckBox x:ConnectionId='4' Name="UseToolkit" Margin="16" Foreground="CornflowerBlue"
                      Content="Use UWP Community Toolkit Printer Helper" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        KeyTipPlacementMode="Auto">
                <Button x:ConnectionId='5' Name="TestButton" Margin="16"
                        Content="Test Printer"
                        AccessKey="T"
                                                
                        />
                <Button x:ConnectionId='6' Name="SaveButton" Margin="16"
                        Content="Save"
                        AccessKey="S"
                                                
                        />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>

